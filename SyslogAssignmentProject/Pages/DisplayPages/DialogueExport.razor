@using SyslogAssignmentProject.Classes;
@inject GlobalInjection _injectedGlobals;
@inject ListServicer _listOfMessages

<MudDialog>
    <DialogContent>
        Export log?
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Continue</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit()
    {
        LogExport logExport = new(_listOfMessages, _injectedGlobals.S_AppDirectory);
        logExport.s_export(null);
        MudDialog.Close(DialogResult.Ok(true));
    }
    void Cancel() => MudDialog.Cancel();

}