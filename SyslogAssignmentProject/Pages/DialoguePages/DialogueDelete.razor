@using SyslogAssignmentProject.Classes;
@inject RadioListServicer _injectedRadioList;
@inject RadioInjection _injectedRadio;
@inject NavigationManager NavigationManager;

<MudDialog>
  <DialogContent>
    Are you sure you wish to delete this radio?
  </DialogContent>
  <DialogActions>
    <MudButton OnClick="Cancel">Cancel</MudButton>
    <MudButton Color="Color.Primary" OnClick="Submit">Yes</MudButton>
  </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance _mudDialog { get; set; }

    /// <summary>
    /// Deletes Radio.
    ///</summary>
    private void Submit()
    {
        _injectedRadioList.Delete(_injectedRadio.Radio);
        NavigationManager.NavigateTo("/");
        _mudDialog.Close(DialogResult.Ok(true));
        StateHasChanged();
    }
  /// <summary>
  /// Cancels operation of cancelling live feed.
  ///</summary>
  private void Cancel() => _mudDialog.Cancel();

}