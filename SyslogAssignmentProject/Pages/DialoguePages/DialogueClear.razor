@using SyslogAssignmentProject.Classes;
@inject ListServicer _listOfMessages

<MudDialog>
  <DialogContent>
    Are you sure you wish to clear the live feed?
    Ensure log has been exported before continuing.
  </DialogContent>
  <DialogActions>
    <MudButton OnClick="Cancel">Cancel</MudButton>
    <MudButton Color="Color.Primary" OnClick="Submit">Continue</MudButton>
  </DialogActions>
</MudDialog>
@code {
  [CascadingParameter]
  private MudDialogInstance _mudDialog { get; set; }

  /// <summary>
  /// Clears live feed.
  /// </summary>
  private void Submit()
  {
    _listOfMessages.SyslogMessageList.Clear();
    _listOfMessages.RefreshList();
    _mudDialog.Close(DialogResult.Ok(true));
  }
  /// <summary>
  /// Cancels operation of cancelling live feed.
  /// </summary>
  private void Cancel() => _mudDialog.Cancel();
}