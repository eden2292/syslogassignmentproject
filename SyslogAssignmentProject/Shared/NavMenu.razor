<!DOCTYPE html>
<html>
<head>
    <style>
        /* CSS styles for the tree view */
        .tree {
            list-style-type: none;
            margin: 0;
            padding: 0;
            color: blue;
        }

        .tree li {
            margin: 10px 0;
        }

        .tree li:before {
            content: "▶";
            margin-right: 5px;
            cursor: pointer;
            color: yellow;
        }

        .tree li.collapsed:before {
            content: "▶";
            color: green;
        }

        .tree li.expanded:before {
            content: "▼";
            color: red;
        }
    </style>
</head>
<body>
<ul class="tree">
    <li class="collapsed">
        <button>Radios</button>
        <ul class="tree">
            @foreach (string ipAddress in _radios)
            {
                <li>
                    <button>@ipAddress</button>
                </li>
            }

        </ul>
    </li>
    <li class="collapsed">Severity
        <ul class="tree">
             @foreach(string severityCode in _severity)
             {
                 <li>severityCode</li>
             }
        </ul>
        
    </li>
</ul>

</body>
</html>

@code
{

    public String Radios { get; set; }

    List<String> _radios = new List<String>();
    List<String> _severity = new List<String>(4);
    protected override void OnInitialized()
    {
        _radios.Add("demo1");
        _radios.Add("demo2");
        _radios.Add("demo3");
    }

}
